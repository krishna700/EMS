<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <com.mikhaellopez.circularimageview.CircularImageView
            app:civ_shadow_gravity="center"
            android:id="@+id/profilePhoto"
            app:civ_border_color="@color/textGrey"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/placeholder"
            android:layout_marginTop="10dp"
            app:civ_shadow_color="@color/colorAccent"
            android:layout_marginStart="@dimen/text_20sp"
            android:layout_width="175dp"
            android:layout_height="155dp" />



    <TextView
        android:layout_marginTop="12sp"
        android:text="@string/name"
        android:gravity="center_horizontal"
        android:textColor="@color/textGrey"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/text_20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="@dimen/text_20sp"
        android:background="@drawable/edittext_background"
        android:layout_marginStart="@dimen/text_20sp"
        android:textColor="@color/textBlack"
        android:inputType="textCapWords"
        android:layout_height="60dp"/>
    <TextView
        android:text="@string/designation"
        android:layout_marginStart="20sp"
        android:gravity="start"
        android:textColor="@color/textGrey"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/designation"
        android:layout_marginEnd="@dimen/text_20sp"
        android:layout_marginStart="@dimen/text_20sp"
        android:textColor="@color/textBlack"
        android:inputType="textCapWords"
        android:background="@drawable/edittext_background"
        android:layout_height="60dp"/>
    <TextView
        android:text="@string/employee_list_option_two"
        android:gravity="start"
        android:textColor="@color/textGrey"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/email"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="@dimen/text_20sp"
        android:background="@drawable/edittext_background"
        android:layout_marginStart="@dimen/text_20sp"
        android:textColor="@color/textBlack"
        android:inputType="textCapWords"
        android:layout_height="60dp"/>
    <TextView
        android:text="@string/phone"
        android:gravity="center_horizontal"
        android:textColor="@color/textGrey"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:layout_marginStart="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/phone_number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="@dimen/text_20sp"
        android:background="@drawable/edittext_background"
        android:layout_marginStart="@dimen/text_20sp"
        android:textColor="@color/textBlack"
        android:inputType="textCapWords"
        android:layout_height="60dp"/>

</LinearLayout>