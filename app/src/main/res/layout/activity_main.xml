<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/curve_bg">

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="50dp"
            android:layout_marginTop="50dp"
            android:elevation="100sp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_margin="20sp"
        android:layout_marginTop="50dp"
        android:src="@drawable/me"
        app:civ_shadow_gravity="center"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="@color/colorPrimary"/>
<TextView
    android:id="@+id/name"
    android:textSize="18sp"
    android:textStyle="bold"
    android:fontFamily="sans-serif-black"
    android:textColor="@color/textBlack"

    android:layout_marginTop="30dp"
    android:layout_toEndOf="@id/profilePhoto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/designation"
        android:textSize="12sp"
        android:layout_below="@id/name"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/textGrey"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/profilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/department"
        android:textSize="12sp"
        android:layout_below="@id/designation"
        android:fontFamily="sans-serif"
        android:textColor="@color/textGrey"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/profilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:id="@+id/edit"
        android:textSize="12sp"
        android:drawableTop="@drawable/edit"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif"
        android:textColor="@color/textBlack"
        android:text="EDIT"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/department"
        android:layout_width="85dp"
        android:layout_height="wrap_content" />



</RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <Button
            android:backgroundTint="#ff6416"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:paddingTop="20dp"
            android:elevation="80dp"
            android:id="@+id/employeeList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/employee_list"
            android:text="@string/home_option_one" />

        <Button
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:elevation="80dp"
            android:backgroundTint="#ff6416"
            android:textSize="12sp"
            android:maxLines="3"
            android:id="@+id/requestLeave"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/request_leave"
            android:text="@string/home_option_two" />

        <Button
            android:paddingTop="20dp"
            android:elevation="80dp"
            android:backgroundTint="#ff6416"
            android:textSize="11sp"
            android:id="@+id/markAttendance"
            android:layout_width="100dp"
            android:textColor="#ffffff"
            android:layout_height="100dp"
            android:drawableTop="@drawable/mark_attendance"
            android:text="@string/home_option_three" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <Button
            android:backgroundTint="#ff6416"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:paddingTop="20dp"
            android:elevation="80dp"
            android:id="@+id/chat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/chat"
            android:text="@string/home_option_four" />

        <Button
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:elevation="80dp"
            android:backgroundTint="#ff6416"
            android:textSize="12sp"
            android:maxLines="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/notice"
            android:text="@string/home_option_five" />
        <Button
            android:paddingTop="20dp"
            android:textColor="#ffffff"
            android:elevation="80dp"
            android:backgroundTint="#ff6416"
            android:textSize="12sp"
            android:maxLines="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/approve_leave"
            android:text="@string/home_option_six" />


    </LinearLayout>


</LinearLayout>